section.title-section.section-block
  h1.special dotfury
section.introduction-section
  .introduction
    p #{about.introduction}
  .information
    h3 General Information
    .details
      .detail-section
        | !{about.frontEnd}
      .detail-section
        | !{about.backEnd}
      .detail-section
        | !{about.creative}
section
  h3 Projects
  .display-slider
    each work in featuredWork 
      .featured-work
        a(href=work.link target="_blank")
          img(src=work.image width="250")
        div 
          | !{work.description}
section
  h3 Experiments
  .display-slider
    each experiment in experiments 
      .featured-experiment
        a(href=experiment.link target="_blank")
          img(src=experiment.image width="250")
section
  h3 Code Samples
  .display-samples
    each sample in samples
      div
        a(href=sample.link target="_blank")
          | #{sample.title}
